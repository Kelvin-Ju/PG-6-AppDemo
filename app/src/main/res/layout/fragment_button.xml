<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context=".ButtonFragment">



    <Button
        android:id="@+id/button_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 DEGREES"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_open_camera_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 DEGREES" />

    <Button
        android:id="@+id/button_open_camera_diagonals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagonals"
        android:layout_marginTop="16dp"/>

</LinearLayout>
